@model IEnumerable<ClinicaViavaEstetica.Models.Agenda>

@{
    ViewBag.Title = "Index";
}

    
    <div class="row">
        <hr />
        <h2 class="text-info">Listar Agendas</h2>
        <hr />
        <div class="col-md-8 col-md-offset-2">
            <p>
                @Html.ActionLink("Agendar", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataMarcacao)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataMarcacao)
                        </td>
                        <td>
                            @Html.ActionLink("Reagendar", "Edit", new { id = item.Id.ToString() }) |
                            @Html.ActionLink("Detalhe", "Details", new { id = item.Id.ToString() }) |
                            @Html.ActionLink("Cancelar", "Delete", new { id = item.Id.ToString() })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

