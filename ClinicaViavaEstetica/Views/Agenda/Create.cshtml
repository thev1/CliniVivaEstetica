@model ClinicaViavaEstetica.Models.ViewModel.AgendaViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <hr />
    <h2 class="text-info">Listar Agendas - @Session["nome"] @Session["sobrenome"]</h2>
    <hr />
    <div class="col-md-8 col-md-offset-2">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>AgendaViewModel</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descricao)
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataMarcacao)
                            @Html.EditorFor(model => model.DataMarcacao, new { htmlAttributes = new { @class = "form-control date-picker" } })
                            @Html.ValidationMessageFor(model => model.DataMarcacao, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Estado)
                                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.selectedId)
                            <div>
                                @Html.DropDownListFor(model => model.selectedId, Model.Options, new { @class = "form-control col-md-8" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </div>
        }

        <div>
            @Html.ActionLink("Listar Agendas", "Index")
        </div>
    </div>
</div>